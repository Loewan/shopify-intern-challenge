<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: image %>
      <%= form_with(model: image, class:'shawdow p-3 mb-5 bg-white rounded') do |form| %>

        <div class="form-group row">
          <%= form.label :title, class: 'col-2 col-form-label' %>
          <div class="col-sm-10">
              <%= form.text_field :title, class: 'form-control', placeholder:'Enter image title' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :picture, class: 'col-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class:'form-control-file' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, class: 'col-2 col-form-label' %>
          <div class="col-sm-10">
              <%= form.text_area :description, rows: 10, class: 'form-control', placeholder:'Enter image description' %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: 'btn btn-primary btn-lg'%>
        </div>
      <% end %>
      <%= link_to 'Cancel and return to images', images_path%>
    </div>
  </div>
</div>
