<%= form_with(model: image) do |form| %>
  <%= render 'shared/errors', obj: image %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :picture %>
    <%= form.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </p>


  <p>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </p>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
