
<div class="container text-center">



  <% @images.each do |image| %>
  <div class="container row align-items-center">
    <div class="card col-6" style="width: 18rem;">
      <% if image.picture? %>
        <%= image_tag image.picture.url, class: 'card-img-top'%>
      <% end %>

      <div class="card-body">
        <h5 class="card-title"><%= image.title %></h5>
        <p class="card-text"><%= image.description %><br>
          by <%= link_to image.user.username, user_path(image.user) %></p>
        <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
        <div class="text-white">
          <%= link_to 'Show', image, class: "btn btn-outline-primary" %>
          <% if logged_in? && image.user == current_user %>
            <%= link_to 'Edit', edit_image_path(image), class: "btn btn-outline-success" %>
            <%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

</div>
