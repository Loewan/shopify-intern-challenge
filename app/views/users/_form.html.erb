<%= render 'shared/errors', obj: @user %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class:'shawdow p-3 mb-5 bg-white rounded') do |form| %>

        <div class="form-group row">
          <%= form.label :username, class: 'col-2 col-form-label' %>
          <div class="col-sm-10">
              <%= form.text_field :username, class: 'form-control', placeholder:'Enter username' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :email, class: 'col-2 col-form-label' %>
          <div class="col-sm-10">
            <%= form.text_field :email, class:'form-control', placeholder:'Enter email' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :password, class: 'col-2 col-form-label' %>
          <div class="col-sm-10">
              <%= form.password_field :password, class: 'form-control', placeholder:'Enter password' %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: 'btn btn-primary btn-lg'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
