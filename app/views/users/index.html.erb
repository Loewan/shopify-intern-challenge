<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <% @users.each do |user| %>

  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card mb-3 shadow mb-5 bg-white rounded">
        <div class="card-body">
          <h5 class="card-title"><%= user.username %></h5>
          <p class="card-text">
          <small class="text-muted">Joined <%= time_ago_in_words(user.created_at) %> ago</small> |
          <small class="text-muted font-italic">by <%= link_to user.username, user_path(user) %></small></p>
          <div class="text-white">
            <%= link_to 'View all images', user, class: "btn btn-outline-primary" %>
            <% if logged_in? && user == current_user %>
              <%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-success" %>
              <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
