

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url:login_path, local: true, class:'shawdow p-3 mb-5 bg-white rounded') do |form| %>

        <div class="form-group row">
          <%= form.label :email, class: 'col-2 col-form-label' %>
          <div class="col-sm-10">
              <%= form.email_field :email, class: 'form-control', placeholder:'Enter email' %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :password, class: 'col-2 col-form-label' %>
          <div class="col-sm-10">
              <%= form.password_field :password, class: 'form-control', placeholder:'Enter password' %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit('Log in')%>
        </div>
      <% end %>
    </div>
  </div>
</div>
